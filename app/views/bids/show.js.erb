<% 
if @bid.status == 'pending' 
    if @bid.bid_type == 'buynow'
        @status = "Buying out..."
    else
        @status = "Placing bid..."
    end
elsif @bid.status == 'done'
    @status = "Bid placed."
    %>
    $('#bid-btn-<%= @bid.lead_id %>').removeClass("disabled");
    $('#buynow-btn-<%= @bid.lead_id %>').removeClass("disabled");
    $('#status-<%= @bid.lead_id %>').addClass('text-success');
    <%    
elsif @bid.status == 'error'
    @status = @bid.error
    %>
    $('#bid-btn-<%= @bid.lead_id %>').removeClass("disabled");
    $('#buynow-btn-<%= @bid.lead_id %>').removeClass("disabled");
    $('#status-<%= @bid.lead_id %>').addClass('text-danger');
    <%
end

    %>
    if (window['leadtimers-' + <%=@bid.lead_id%>]) 
        clearInterval(window['leadtimers-' + <%=@bid.lead_id%>]);
    <%

unless @bid.lead.user_id

    %>
    window['leadtimers-' + <%=@bid.lead_id%>] = setInterval(function(){
        $.ajax({
            url: "<%= bid_path(@bid) %>",
            cache: false,
            complete: function(xhr, status) {
            }
        });
    }, 5000);
    <%
end

%>

$('#user-status-<%= @bid.lead_id %>').html('<%= @bid.lead.user_status(current_user) %>');
$('#counter-<%= @bid.lead_id %>').html('<%= @bid.lead.print_time_left %>');
$('#counter-<%= @bid.lead_id %>').countdown(<%= @bid.lead.time_left %>);
$('#bid-buynow-<%= @bid.lead_id %>').html('$<%= @bid.lead.buy_now_price %>');
$('#table-bid-<%= @bid.lead_id %>').html('$<%= @bid.lead.bid %>');
$('#status-<%= @bid.lead_id %>').html('<%= @status %>');